{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration for PR management and issue tracking",
      "enabled": false
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "description": "PostgreSQL database queries and schema inspection",
      "enabled": false
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${PROJECT_ROOT}/src"
      ],
      "description": "Scoped filesystem access (safer than full system access)",
      "enabled": false
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_ORG": "your-org",
        "SENTRY_PROJECT": "your-project"
      },
      "description": "Sentry error monitoring and debugging",
      "enabled": false
    }
  },
  "notes": {
    "usage": "Enable only the MCP servers you use regularly (>50% of sessions)",
    "token_cost": "Each enabled server adds 400-800 tokens to context",
    "configuration": "Update env variables and set enabled=true to activate"
  }
}
